%:Construcción de la cubierta
\makeatletter		
\def\cubiertalibro#1{%
	\pgfdeclarelayer{background}
	\pgfdeclarelayer{foreground}
	\pgfsetlayers{background,main,foreground}
	
	\pagestyle{empty}
	\definecolor{rdsimol}{RGB}{129,123,237}
	\definecolor{fondo}{RGB}{94,172,135}
	\definecolor{texto}{RGB}{249,211,101}
	\definecolor{logordsimol}{RGB}{176,124,96}
	\definecolor{uccolor}{RGB}{9,105,112}
	\begin{tikzpicture}[remember picture,overlay]
		\begin{pgfonlayer}{background}
		\filldraw[fondo] (current page.north west) rectangle (current page.south east);   % fondo de color a la página
		\filldraw[rdsimol] (current page.north west) rectangle ([xshift=30mm]current page.south west);
%		\filldraw[rdsimol] ([yshift=-165mm] current page.north west) rectangle ([yshift=-210mm]current page.north east);
		\node[anchor=north west, %anchor is upper left corner of the graphic
		      	xshift=-1.2mm, %shifting around
		      	yshift=-200mm%-164mm
			] 
		     	at (current page.north west) %left upper corner of the page
		     	{\includegraphics[width=30mm, height=45mm]{LOGO50UC.jpg}}; 
				
%		\node[anchor=north west, %anchor is upper left corner of the graphic
%		      	xshift=-2mm, %shifting around
%		      	yshift=-200mm] 
%		     	at (current page.north west) %left upper corner of the page
%		     	{\includegraphics[height=12mm]{modelicobanner2.png}}; 
		
		\node[align=right, anchor=north east] 
			at ([xshift=-30mm,yshift=-75mm]current page.north east)
			{\includegraphics[height=85mm]{#1} 
			};
			
		\end{pgfonlayer}
		
		% Todo el texto 
		\begin{pgfonlayer}{foreground}

		\node[align=right, anchor=north east, color=texto] 
			at ([xshift=-30mm,yshift=-20mm]current page.north east) 
			{\begin{minipage}{0.75\textwidth}
				\hyphenpenalty10000
				\filleft
				\titulofont\eltitulo
				\ifx\subtitulo\empty\else\vskip10pt\baselineskip24pt\vrule height2pc width0pt\elsubtitulo\vskip1sp\fi
			\end{minipage}};
  
		\node[align=left, anchor=north east, color=texto] 
			at ([xshift=-30mm,yshift=-175mm]current page.north east) 
			{\begin{minipage}{0.85\textwidth}
				\hyphenpenalty10000
				\filleft
				\autorfont \elautor
				\vskip 4pt
				\setstretch{.05}
				\eldepartamento
				\vskip 1pt
				\elcentro
				\vskip 1pt
				\launiversidad
			\end{minipage}};
		\end{pgfonlayer}
  
		
	\end{tikzpicture}
	\newpage\mbox{}
	%\newpage\mbox{}
	%\newpage\mbox{}
}
\makeatother
%:Fin de construcción de la cubierta del libro 

